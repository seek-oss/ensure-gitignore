{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es2019"],
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "test"]
}
